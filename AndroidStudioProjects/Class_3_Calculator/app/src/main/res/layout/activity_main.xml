<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_bright"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp" >

        <Button
            android:id="@+id/clr"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="clear" />

        <Button
            android:id="@+id/del"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="backspace" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b7"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="7" />

        <Button
            android:id="@+id/b8"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="8" />

        <Button
            android:id="@+id/b9"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="9" />

        <Button
            android:id="@+id/bp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="4" />

        <Button
            android:id="@+id/b5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="5" />

        <Button
            android:id="@+id/b6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="6" />

        <Button
            android:id="@+id/bm"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="1" />

        <Button
            android:id="@+id/b2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="2" />

        <Button
            android:id="@+id/b3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="3" />

        <Button
            android:id="@+id/bmul"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="*" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b0"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="0" />

        <Button
            android:id="@+id/bdot"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="." />

        <Button
            android:id="@+id/be"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="=" />

        <Button
            android:id="@+id/bd"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="/" />
    </LinearLayout>

</LinearLayout>